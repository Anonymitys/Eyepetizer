<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.ekko.player.render.VideoPlayerView
        android:id="@+id/video_player_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.ekko.player.gesture.PlayerGestureView
        android:id="@+id/gesture"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.ekko.player.controller.VideoPlayControlView
        android:id="@+id/controller"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.ekko.player.functionwidget.FunctionWidgetContainer
        android:id="@+id/function_widget_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>